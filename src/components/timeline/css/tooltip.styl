.tl-tooltip__popper
	position: absolute;
	border-radius: 4px;
	padding: 10px;
	z-index: 2000;
	font-size: 12px;
	line-height: 1.2
  .popper__arrow,
  .popper__arrow::after
    position: absolute;
    display: block;
    width: 0;
    height: 0;
    border-color: transparent;
    border-style: solid
  .popper__arrow
	  border-width: 6px
  .popper__arrow::after
    content: " ";
    border-width: 5px
  &[x-placement^=top]
	  margin-bottom: 12px
    &.popper__arrow
      bottom: -6px;
      border-top-color: #1f2d3d;
      border-bottom-width: 0
      &:after
        bottom: 1px;
        margin-left: -5px;
        border-top-color: #1f2d3d;
        border-bottom-width: 0
  &[x-placement^=bottom]
	  margin-top: 12px
    &.popper__arrow
      top: -6px;
      border-top-width: 0;
      border-bottom-color: #1f2d3d
      &:after
        top: 1px;
        margin-left: -5px;
        border-top-width: 0;
        border-bottom-color: #1f2d3d
  &[x-placement^=right]
	  margin-left: 12px
    &.popper__arrow
      left: -6px;
      border-right-color: #1f2d3d;
      border-left-width: 0
      &:after
        bottom: -5px;
        left: 1px;
        border-right-color: #1f2d3d;
        border-left-width: 0
  &[x-placement^=left]
	  margin-right: 12px
    &.popper__arrow
      right: -6px;
      border-right-width: 0;
      border-left-color: #1f2d3d
      &:after
        right: 1px;
        bottom: -5px;
        margin-left: -5px;
        border-right-width: 0;
        border-left-color: #1f2d3d
  &.is-light
    background: #fff;
    border: 1px solid #1f2d3d
    &[x-placement^=top]
      .popper__arrow
	      border-top-color: #1f2d3d
        &:after
	        border-top-color: #fff
    &[x-placement^=bottom]
      .popper__arrow
	      border-bottom-color: #1f2d3d
        &:after
	        border-bottom-color: #fff
    &[x-placement^=left]
      .popper__arrow
	      border-left-color: #1f2d3d
        &:after
	        border-left-color: #fff
    &[x-placement^=right]
      .popper__arrow
	      border-right-color: #1f2d3d
        &:after
	        border-right-color: #fff
  &.is-dark
	  background: #1f2d3d;
	  color: #fff
